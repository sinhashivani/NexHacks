{
  "manifest_version": 3,
  "name": "Polymarket Trade Assistant",
  "version": "1.0.0",
  "description": "Overlay extension for Polymarket trade recommendations",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://polymarket.com/*",
    "https://*.polymarket.com/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://polymarket.com/*", "https://*.polymarket.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://polymarket.com/*", "https://*.polymarket.com/*"]
    }
  ]
}
